<h1>Statuses</h1>

<%= link_to "Add Status", new_status_path %>
<br>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>User</th>
      <th>Likes</th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |s| %>
      <tr>
        <td><%= s.status %></td>
        <td><%= s.user %></td>
        <td><%= s.likes %></td>
        <td><%= link_to "Edit", edit_status_path(s) %>
        <td><%= link_to "Delete", status_path(s), method: :delete, data: {confirm: "Delete this mistake?"} %>
      </tr>
    <% end %>
  </tbody>
</table
